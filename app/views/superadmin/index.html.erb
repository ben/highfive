<h1>Super Admin</h1>

<!-- TODO: filter  -->
<table class="table table-striped">
  <thead>
    <th> Team </th>
    <th> Highfive Count </th>
    <th> Actions </th>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
    <tr>
      <td><code> <%= team.team_subdomain %> </code></td>
      <td><%= team.highfive_records.count %></td>
      <td>
        <%= form_for 'impersonate', url: '/superadmin/impersonate', html: {target: '_blank'} do %>
          <input type="hidden" name="team_id" value="<%= team.team_id %>">
          <a class="impersonate" href="#">
            Admin login
          </a>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
